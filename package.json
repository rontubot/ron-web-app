{  
  "name": "ron-web-app",  
  "version": "1.0.0",  
  "description": "Aplicacion react de Ron",  
  "main": "main.js",  
  "homepage": "./",  
  "scripts": {  
    "start": "react-scripts start",  
    "build": "react-scripts build",  
    "test": "react-scripts test",  
    "eject": "react-scripts eject",  
    "electron": "electron .",  
    "electron-dev": "ELECTRON_IS_DEV=true electron .",  
    "electron-pack": "electron-builder",  
    "preelectron-pack": "npm run build"  
  },  
  "dependencies": {  
    "react": "^18.2.0",  
    "react-dom": "^18.2.0",  
    "react-scripts": "5.0.1",  
    "electron": "27.0.0",  
    "electron-is-dev": "2.0.0",  
    "express": "^4.18.0",  
    "cors": "^2.8.5",  
    "axios": "^1.4.0",  
    "jsonwebtoken": "^9.0.0",  
    "bcryptjs": "^2.4.3",  
    "dotenv": "^16.0.0"  
  },  
  "devDependencies": {  
    "@types/react": "^18.2.0",  
    "@types/react-dom": "^18.2.0",  
    "electron-builder": "^24.0.0"  
  },  
  "build": {  
    "appId": "com.ron.assistant",  
    "productName": "Ron Assistant",  
    "directories": {  
      "output": "dist"  
    },  
    "files": [  
      "build/**/*",  
      "main.js",  
      "preload.js",  
      "python-scripts/**/*",  
      "node_modules/**/*"  
    ],  
    "extraResources": [  
      {  
        "from": "python-scripts",  
        "to": "python-scripts"  
      }  
    ],  
    "win": {  
      "target": "nsis",  
      "icon": "build/icon.ico"  
    },  
    "mac": {  
      "target": "dmg",  
      "icon": "build/icon.icns"  
    },  
    "linux": {  
      "target": "AppImage",  
      "icon": "build/icon.png"  
    }  
  },  
  "browserslist": {  
    "production": [  
      ">0.2%",  
      "not dead",  
      "not op_mini all"  
    ],  
    "development": [  
      "last 1 chrome version",  
      "last 1 firefox version",  
      "last 1 safari version"  
    ]  
  },  
  "eslintConfig": {  
    "extends": [  
      "react-app",  
      "react-app/jest"  
    ]  
  }  
}